### -*- ratpoisonrc -*-

escape C-z

unmanage Top Expanded Edge Panel
unmanage Do
set padding 0 24 0 0

bind o other
# lock the same as screen
bind C-x exec xscreensaver-command -lock
bind N nextscreen
bind P prevscreen

bind w exec ~/bin/windows

exec xscreensaver -nosplash
exec xterm
exec xmodmap ~/.xmodmaprc
exec xsetroot -solid black

alias emacs exec emacs
alias firefox exec firefox
